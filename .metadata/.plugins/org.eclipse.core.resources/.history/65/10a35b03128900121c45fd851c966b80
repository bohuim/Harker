public class Move
{
    public static final int STOCK = 0;
    public static final int WASTE = 1;
    
    private int target;
    private int destination;
    private int num;
    
    public Move(int t, int d, int n)
    {
        target = t;
        destination = d;
        num = n;
    }
    
    public int getTarget()
    {
        return target;
    }
    
    public int getDestination()
    {
        return destination;
    }
    
    public int getNumber()
    {
        return num;
    }
    
    public int convertPile(int index)
    {
        return index+2;
    }
    
    public int convertFoudation(int index)
    {
        return index+9;
    }
}
